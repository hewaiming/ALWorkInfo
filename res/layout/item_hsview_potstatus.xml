<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:padding="5dp" >

    <TextView
        android:id="@+id/tv_PotNo"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="5dp"
        android:text="槽号"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/text_gray2"
        android:textSize="12sp" />

    <com.hewaiming.ALWorkInfo.HScrollListView.InterceptScrollContainer
        android:id="@+id/scroollContainter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/tv_PotNo"
        android:focusable="false" >

        <com.hewaiming.ALWorkInfo.HScrollListView.MyHScrollView
            android:id="@+id/horizontalScrollView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_PotSt"
                    android:layout_width="26dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="槽状态"
                    android:textAppearance="?android:attr/textAppearanceMedium"                   
                    android:textColor="@color/text_gray2"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_AutoRun"
                    android:layout_width="26dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="手/自"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/text_gray2"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_Operation"
                    android:layout_width="26dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="槽作业"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/text_gray2"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_FaultNo"
                    android:layout_width="16dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="故障"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/text_gray2"
                    android:textSize="12sp" />
                
                <TextView
                    android:id="@+id/tv_SetV"
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="设定电压"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/text_gray2"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_WorkV"
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="工作电压"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/text_gray2"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/tv_SetNb"
                    android:layout_width="28dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="设定 NB"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/text_gray2"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_WorkNb"
                    android:layout_width="28dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="实际 NB"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/text_gray2"
                    android:textSize="12sp" />
                 <TextView
                    android:id="@+id/tv_NbPlus"
                    android:layout_width="28dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="过欠"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/text_gray2"
                    android:textSize="12sp" />
                

                <TextView
                    android:id="@+id/tv_NBTime"
                    android:layout_width="36dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="NB时刻"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/text_gray2"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_AeSpan"
                    android:layout_width="26dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="AE间隔"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/text_gray2"
                    android:textSize="11sp" />
                
                 <TextView
                    android:id="@+id/tv_AeTime"
                    android:layout_width="44dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="AE时刻"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/text_gray2"
                    android:textSize="11sp" />
                  <TextView
                    android:id="@+id/tv_AeV"
                    android:layout_width="36dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="AE电压"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/text_gray2"
                    android:textSize="11sp" />
                   <TextView
                    android:id="@+id/tv_AeContinues"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="AE时间"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/text_gray2"
                    android:textSize="11sp" />
                   <TextView
                    android:id="@+id/tv_AeStatus"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="AE状态"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/text_gray2"
                    android:textSize="11sp" /> 
                    <TextView
                    android:id="@+id/tv_AeCnt"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="AE次数"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/text_gray2"
                    android:textSize="12sp" /> 
                    <TextView
                    android:id="@+id/tv_OStatus"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="加料态"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/text_gray2"
                    android:textSize="11sp" /> 
                <TextView
                    android:id="@+id/tv_YJWZ"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="阳极位置"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/text_gray2"
                    android:textSize="12sp" />
                 <TextView
                    android:id="@+id/tv_Noise"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="噪音"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/text_gray2"
                    android:textSize="11sp" />
            </LinearLayout>
        </com.hewaiming.ALWorkInfo.HScrollListView.MyHScrollView>
    </com.hewaiming.ALWorkInfo.HScrollListView.InterceptScrollContainer>

</RelativeLayout>