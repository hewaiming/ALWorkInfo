<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg_white"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_PotNo_head"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="7dp"
        android:layout_weight="1"
        android:text="PotNo"
        android:textColor="@color/header_text"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_RecordNo_head"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="7dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="7dp"
        android:layout_weight="2"
        android:text="BeginTime"
        android:textColor="@color/header_text"
        android:textSize="12sp" />
    
    
    <TextView
        android:id="@+id/tv_param1_head"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="7dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="7dp"
        android:layout_weight="2"
        android:text="EndTime"
        android:textColor="@color/header_text"
        android:textSize="12sp" />
    
    <TextView
        android:id="@+id/tv_param2_head"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="7dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="7dp"
        android:layout_weight="2"
        android:text="EndTime"
        android:textColor="@color/header_text"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_RecTime_head"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        android:layout_weight="2"
        android:text="EndTime"
        android:textColor="@color/header_text"
        android:textSize="12sp" />

</LinearLayout>