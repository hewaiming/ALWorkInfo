<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"  
    android:background="@@color/base_bg_gray"
    android:orientation="vertical" >

    <!--
     GridView是可滚动的网格。一般用来显示多张图片。
     android:horizontalSpacing="5dp" 两列之间的间距是5dp
     android:verticalSpacing="5dp" 两行之间的间距是5dp
     android:stretchMode="spacingWidth" 缩放与列宽大小同步
     android:numColumns="auto_fit" 本来是一行显示几个，现在改为自动分配
    -->

    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:paddingTop="8dp"
        android:paddingBottom="5dp"
        android:background="@color/base_bg_white"
        android:gravity="center_horizontal"
        android:horizontalSpacing="8dp"     
        android:numColumns="4"
        android:verticalSpacing="11dp" />

    <LinearLayout       
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/base_bg_white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_AeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:text="当日效应系数"
            android:textColor="@color/text_gray2"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:background="#d2d2d2" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/Ae_chart"
            android:layout_width="match_parent"
            android:layout_height="100dp" />
    </LinearLayout>

</LinearLayout>